<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/newproduct_add"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/wp">

    <TextView
        android:id="@+id/desc"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DESCRIPTION :"
        android:background="#E3F2FD"
        android:textStyle="bold"
        android:textSize="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_below="@+id/age"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/pricehead"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ENTER PRODUCT PRICE :"
        android:textSize="15dp"
        android:background="#E3F2FD"
        android:textStyle="bold"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/type"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:layout_below="@+id/descript"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp" />

    <EditText
        android:id="@+id/descript"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:lines="4"
        android:background="#E3F2FD"
        android:textAlignment="center"
        android:hint="Write your product description here.."
        android:layout_below="@+id/desc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp" />

    <TextView
        android:id="@+id/type"
        android:background="#E3F2FD"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SELECT PRODUCT TYPE "
        android:textSize="15dp"
        android:textStyle="bold"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_marginTop="15dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/upload" />
    <TextView
        android:id="@+id/imghead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UPLOAD IMAGE OF YOUR PRODUCT"
        android:textSize="15dp"
        android:background="#E3F2FD"
        android:textStyle="bold"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_below="@+id/head"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp" />

    <Spinner
        android:id="@+id/protype"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/upload"
        android:layout_alignStart="@+id/pricee"
        android:layout_above="@+id/pricehead"
        android:layout_toStartOf="@+id/upload">

    </Spinner>

    <TextView
        android:id="@+id/age"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PRODUCT AGE:"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:background="#E3F2FD"
        android:layout_below="@+id/pricehead"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <Button
        android:id="@+id/upload"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:background="#1565C0"
        android:text="UPLOAD"
        android:textSize="15dp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:fontFamily="casual"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/imghead" />

    <EditText
        android:id="@+id/pricee"
        android:hint="0.00"
        android:layout_width="100dp"
        android:background="#E3F2FD"
        android:textStyle="bold"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="14dp"
        android:layout_alignTop="@+id/pricehead"
        android:layout_toEndOf="@+id/pricehead"
        android:layout_marginStart="18dp" />

    <Spinner
        android:id="@+id/sage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/submit"
        android:background="#E3F2FD"
        android:layout_above="@+id/desc"
        android:layout_alignTop="@+id/age"
        android:layout_alignEnd="@+id/imghead"
        ></Spinner>

    <TextView
        android:id="@+id/head"
        android:fontFamily="serif-monospace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ENTER DETAILS OF YOUR PRODUCT "
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textSize="25dp"
        android:textStyle="bold"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <ImageView
        android:id="@+id/pic"
        android:layout_width="50px"
        android:layout_height="50px"
        android:layout_above="@+id/protype"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>